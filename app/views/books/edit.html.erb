<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors!!!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Body</h4>
  <%= f.text_area :body %>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>

  <div class="show_back">
    <%= link_to 'Show', "/books/#{@book.id}" %>
    |
    <%= link_to 'Back', '/books' %>
  </div>
<% end %>